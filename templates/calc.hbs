<div id="calc-view" class="rounded-corners">
  <form class="form-horizontal">
    {{view PostfixNotation.ExpressionTextField class="input-xlarge"
      placeholder="Enter postfix notation expression..."
      valueBinding="PostfixNotation.calcController.expression"
    }}
    <button class="btn btn-primary" {{action "solveExpression" target="PostfixNotation.calcController"}}>Solve</button>
  </form>

  {{#if PostfixNotation.calcController.error}}
    <div class="alert alert-error">
      The input expression <b>{{PostfixNotation.calcController.lastExpression}}</b> is invalid and cannot be parsed.<br/><br/>
      Error: {{PostfixNotation.calcController.error}}
    </div>
  {{/if}}

  <h1>{{PostfixNotation.calcController.solution}}</h1>
  {{#if PostfixNotation.calcController.stepController.length}}
    <hr>
    Steps:<br/><br/>
    {{#each PostfixNotation.calcController.stepController}}
      <b>Step {{index}}:</b> {{leftValue}} {{operator}} {{rightValue}} = {{result}}<br/>
    {{/each}}
    <b>Answer:</b> {{PostfixNotation.calcController.solution}}
  {{/if}}
</div>
